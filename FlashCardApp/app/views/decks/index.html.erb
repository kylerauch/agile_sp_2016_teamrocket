<div class ="wrapper">
<p id="notice"><%= notice %></p>
<h1>Listing Decks</h1>

<table class ="deck_container">
  <thead>
    <tr>
      <th><!--Space holder --></th>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Created by</th>
      <th>Last Modified</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= link_to 'Show', deck %></td>
        <td><%= deck.title %></td>
        <td><%= deck.description %></td>
        <td><%= deck.category %></td>
        <td><%= deck.created_by %></td>
        <td><%= time_ago_in_words(deck.updated_at) %> <p> ago.</p></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Manage Cards', deck_cards_path(deck) %></td>
        <td><%= link_to 'Delete', deck, method: :delete, data: { confirm: 'Are you sure you would like to delete this deck?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>

<%= link_to 'New Deck', new_deck_path %>
