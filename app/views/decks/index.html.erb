<div class ="wrapper">
  <p id="notice"><%= notice %></p>
  <h1>Decks</h1>
  <div class="col-xs-12 col-sm-8 col-md-6 lg-md-6 col-xs-offset-0 col-sm-offset-2 col-md-offset-3">
    <div class="row">
      <div class="col-xs-6 deckHead">
        <h5>Deck Information</h5>
      </div>
      <div class="col-xs-6 optHead">
        <h5>Deck Options</h5>
      </div>
    </div>
    <div class="row deckDetails">
      <% @decks.each do |deck| %>
      <div class="col-xs-6">
        <span>Title:</span> <%= link_to deck.title, deck %>
        <br>
        <span>Description:</span> <%= deck.description %>
        <br>
        <span>Catagory:</span> <%= deck.category %>
        <br>
        <span>Author:</span> <%= deck.created_by %>
      </div>
      <div class="col-xs-6 deckOptions">
        <%= link_to 'Edit', edit_deck_path(deck) %>
        <br>
        <%= link_to 'Manage Cards', deck_cards_path(deck) %>
        <br>
        <%= link_to 'Delete Deck', deck, method: :delete, data: { confirm: 'Are you sure you wish to delete this deck?' } %>
      </div>
      <% end %>
    </div>
    <%= link_to 'New Deck', new_deck_path %>
  </div>
</div>