        <h4>
          <%= f.label :title %><br>
          <%= f.text_area :title %>
        </h4>
      </div>
      <div class="row">
        <h4>
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </h4>
      </div>
      <div class="row">
        <h4>
          <%= f.label :category_id %><br>
          <%= f.select :category_id, @categories, :include_blank => true %>
        </h4>
      </div>
      <div class="row">
        <h4>
          <%= f.label :created_by %><br>
          <%= f.text_field :created_by %>
        </h4>
      </div>
      <div class="row">
        <h4><%= f.submit %></h4>
      </div>
    </div>
  </div>
<% end %>
